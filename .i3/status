order += "volume master"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "ipv6"
order += "battery 0"
order += "battery 1"
order += "cpu_usage 0"
order += "cpu_temperature 0"
order += "tztime local"

path_exists VPN {
     # path exists when a VPN tunnel launched by nmcli/nm-applet is active
     path = "/proc/sys/net/ipv4/conf/tun0"
}

wireless _first_ {
        format_up = "%essid %quality %ip"
}

ethernet _first_ {
        format_up = "%ip (%speed)"
}

battery 0 {
        format = "%status %percentage"
        format_down = ""
        path = "/sys/class/power_supply/BAT0/uevent"
        last_full_capacity = true
}

battery 1 {
        format = "%status %percentage"
        format_down = ""
        path = "/sys/class/power_supply/BAT1/uevent"
        last_full_capacity = true
}

tztime local {
        format = "%a %e.%m.%Y %H:%M"
}

cpu_usage {
        format = "CPU %usage"
}

cpu_temperature 0 {
        format = "%degreesÂ°C"
}

volume master {
        format = "VOL %volume"
        format_muted = "MUT  0%%"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
